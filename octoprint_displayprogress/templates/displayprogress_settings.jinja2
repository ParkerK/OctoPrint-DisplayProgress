
<form class="form-horizontal">

    <div>
    <label>Selection Preview</label>
    <div id="preview" class="{{ plugin_displayprogress_barsymbol }}"></div>
    </div>

    <div class="control-group">
        <label class="control-label">{{ _('Bar Symbol') }}</label>
        <div class="controls">
            <select id="symbol" class="input-block-level" data-bind="value: settings.plugins.displayprogress.barsymbol">
              <option value="pound">#</option>
              <option value="bar">|</option>
              <option value="equals">=</option>
              <option value="dash">-</option>
              <option value="colon">:</option>
              <option value="tilde">~</option>
              <option value="underscore">_</option>
            </select>
        </div>

    </div>
</form>
